@model LambdaForums.Models.Forum.ForumIndexModel
<h1>Forums</h1>

<table class=" table table-hover" id="forumIndexTable">
    <tbody>

        @foreach (var forum in Model.ForumLists)
        {
            <tr>
                <td>
                    @forum.Title
                </td>
                <td>
                    @forum.Description
                </td>
            </tr>

        }
        </tbody>
</table>

